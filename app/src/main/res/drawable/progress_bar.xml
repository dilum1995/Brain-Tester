
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="5dip" />
            <gradient
                android:startColor="@color/pb_startBackground"
                android:centerColor="@color/pb_centerBackground"
                android:centerY="0.75"
                android:endColor="@color/pb_endBackground"
                android:angle="270"
                />
        </shape>
    </item>

    <item
        android:id="@android:id/progress"
        >
        <clip>
            <shape>
                <corners
                    android:radius="5dip" />
                <gradient
                    android:startColor="@color/pb_startColor"
                    android:endColor="@color/pb_endColor"
                    android:angle="270" />
            </shape>
        </clip>
    </item>

</layer-list>