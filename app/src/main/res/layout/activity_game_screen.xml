<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_gradients"
    android:layout_gravity="center"
    tools:context="com.example.dilumdesilva.brain_tester.game_screen">

    <!--main linear layout-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!--layout for the upper messages-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:layout_marginBottom="40dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="7dp"
                android:layout_marginTop="20dp"
                android:text="Hints OFF"
                android:textColor="@color/Text" />

            <Switch
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10"
                android:textColor="@color/Text"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="85dp"
                android:layout_marginRight="7dp"/>

           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="- Seconds left"
               android:textColor="@color/Text"
               android:layout_marginTop="20dp"
               android:layout_marginRight="7dp"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_marginBottom="50dp">


            <TextView
                android:id="@+id/questionCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Q 01 - "
                android:textColor="@color/Text"
                android:textStyle="bold"
                android:textSize="15sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="QUESTION"
                android:textColor="@color/Text"
                android:textStyle="bold"
                android:textSize="15sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" = "
                android:textColor="@color/Text"
                android:textStyle="bold"
                android:textSize="15sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" ANSWER "
                android:textColor="@color/Text"
                android:textStyle="bold"
                android:textSize="15sp"/>


        </LinearLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="HINT or RESULT"
            android:textColor="@color/Text"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="30dp"/>

        <!--linear layout for keypad-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="bottom|center">

            <!--linear layout for first row of the key-pad-->
            <LinearLayout
                android:id="@+id/linearLayout2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="1dp">

                <!--First Row-->
                <Button
                    android:id="@+id/oneBtn"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:background="@color/menuButton_Background"
                    android:text="1"
                    android:textSize="60px"
                    android:layout_marginRight="1dp"/>

                <Button
                    android:id="@+id/twoBtn"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:background="@color/menuButton_Background"
                    android:text="2"
                    android:textSize="60px"
                    android:layout_marginRight="1dp"/>

                <Button
                    android:id="@+id/threeBtn"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:background="@color/menuButton_Background"
                    android:text="3"
                    android:textSize="60px"
                    android:layout_marginRight="1dp"/>

                <Button
                    android:id="@+id/freeBtn1_4"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:background="@color/menuButton_Background"
                    android:text=""
                    android:textSize="60px"
                    android:layout_marginRight="1dp"/>

            </LinearLayout>

            <!--linear layout for second row of the key-pad-->
            <LinearLayout
                android:id="@+id/linearLayout3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="1dp">

                <!--Second Row-->
                <Button
                    android:id="@+id/fourBtn"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:background="@color/menuButton_Background"
                    android:text="4"
                    android:textSize="60px"
                    android:layout_marginRight="1dp"/>

                <Button
                    android:id="@+id/fiveBtn"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:background="@color/menuButton_Background"
                    android:text="5"
                    android:textSize="60px"
                    android:layout_marginRight="1dp"/>

                <Button
                    android:id="@+id/sixBtn"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:background="@color/menuButton_Background"
                    android:text="6"
                    android:textSize="60px"
                    android:layout_marginRight="1dp"/>

                <Button
                    android:id="@+id/freeBtn2_4"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:background="@color/menuButton_Background"
                    android:text=""
                    android:textSize="60px"
                    android:layout_marginRight="1dp"/>

            </LinearLayout>

            <!--linear layout for third row of the key-pad-->
            <LinearLayout
                android:id="@+id/linearLayout6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="1dp">

                <!--Third Row-->
                <Button
                    android:id="@+id/sevenBtn"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:background="@color/menuButton_Background"
                    android:text="7"
                    android:textSize="60px"
                    android:layout_marginRight="1dp"/>

                <Button
                    android:id="@+id/eightBtn"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:background="@color/menuButton_Background"
                    android:text="8"
                    android:textSize="60px"
                    android:layout_marginRight="1dp"/>

                <Button
                    android:id="@+id/nineBtn"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:background="@color/menuButton_Background"
                    android:text="9"
                    android:textSize="60px"
                    android:layout_marginRight="1dp"/>

                <Button
                    android:id="@+id/freeBtn3_4"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:background="@color/menuButton_Background"
                    android:text=""
                    android:textSize="60px"
                    android:layout_marginRight="1dp"/>

            </LinearLayout>

            <!--linear layout for the forth row of the key-pad -->
            <LinearLayout
                android:id="@+id/linearLayout4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="1dp">

                <!--Fourth Row-->
                <Button
                    android:id="@+id/delBtn"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:background="@color/menuButton_Background"
                    android:text="DEL"
                    android:textSize="60px"
                    android:layout_marginRight="1dp"/>

                <Button

                    android:id="@+id/zeroBtn"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:background="@color/menuButton_Background"
                    android:text="0"
                    android:textSize="60px"
                    android:layout_marginRight="1dp"/>

                <Button
                    android:id="@+id/hashBtn"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:background="@color/menuButton_Background"
                    android:text="#"
                    android:textSize="60px"
                    android:layout_marginRight="1dp"/>

                <Button
                    android:id="@+id/minusBtn"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:background="@color/menuButton_Background"
                    android:text="-"
                    android:textSize="60px"
                    android:layout_marginRight="1dp"/>
            </LinearLayout>


        </LinearLayout>

    </LinearLayout>


</RelativeLayout>
