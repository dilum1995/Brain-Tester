<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:id="@+id/activity_splash_screen"
    tools:context="com.example.dilumdesilva.brain_tester.Splash_screen">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ss_imageView"
            android:layout_width="480dp"
            android:layout_height="480dp"
            android:layout_gravity="center"
            android:src="@drawable/logo" />

        <TextView
            android:id="@+id/ss_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="65dp"
            android:text="Copyright Â© 2018 | Developed by Dilum De Silva"
            android:textColor="@color/splashScreenWhite"
            android:textSize="10sp"
            android:textStyle="normal" />

    </LinearLayout>

</RelativeLayout>
